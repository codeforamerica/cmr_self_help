<div class="container">
  <h1 class="mt-5">Done!</h1>

  <p>Download and print your paperwork</p>

  <hr>

  <p>Here's what paperwork we filled out for you:</p>

  <% if @eligible_counts[:prop64].present? %>
    <div class="card mb-3">
      <div class="card-body">
        <h2><%= pluralize(@eligible_counts[:prop64].events.length, 'petition') %> to clear these marijuana convictions:</h2>
        <ul>
          <% @eligible_counts[:prop64].each do |count| %>
            <li><%= "#{count.code_section_description} on #{count.event.date.strftime('%m/%d/%Y')} in #{count.event.courthouse}" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if @eligible_counts[:pc1203].present? %>
    <div class="card mb-3">
      <div class="card-body">
        <h2><%= pluralize(@eligible_counts[:pc1203].events.length, 'petition') %> to dismiss these convictions:</h2>
        <ul>
          <% @eligible_counts[:pc1203].each do |count| %>
            <li><%= "#{count.code_section_description} on #{count.event.date.strftime('%m/%d/%Y')} in #{count.event.courthouse}" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <%= link_to 'âœ“ download paperwork', download_rap_sheet_documents_path(@rap_sheet), class: 'btn btn-info mt-3', data: { turbolinks: false } %>
</div>
