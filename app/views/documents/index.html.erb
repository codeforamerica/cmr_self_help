<div class="container">
  <h1 class="mt-5">Done!</h1>

  <p>Download and print your paperwork</p>

  <hr>

  <p>Here's what paperwork we filled out for you:</p>
  <% @info_per_remedy.each do |info| %>
    <% if info[:events].present? %>
      <div class="card mb-3">
        <div class="card-body">
          <h2><%= pluralize(info[:events].length, 'petition') %> to <%= info[:description_string]%>:</h2>
          <ul>
            <% info[:events].each do |event| %>
              <% event[info[:key]][:counts].each do |count| %>
                <li><%= "#{count.code_section_description} on #{event[:event].date.strftime('%m/%d/%Y')} in #{event[:event].courthouse}" %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>


  <%= link_to 'âœ“ download paperwork', download_rap_sheet_documents_path(@rap_sheet), class: 'btn btn-info mt-3', data: { turbolinks: false } %>
</div>
