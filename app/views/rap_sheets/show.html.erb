<div class="slab">
  <div class="form-card">
    <% if @conviction_counts.length > 0 %>
      <header class="form-card__header text--centered">
        <h1 class="big-emoji">ðŸ˜€</h1>
        <h3>We found <%= pluralize(@eligible_counts[:prop64].length, 'conviction') %> that may be eligible for record clearance.</h3>
      </header>
      <% if @eligible_counts[:prop64].present? %>
        <h2>Prop 64 (<%= @eligible_counts[:prop64].length %>)</h2>
        <% @eligible_events.each do |courthouse, events| %>
          <div class="summary-table">
            <table>
              <caption><%= courthouse %></caption>
              <% events.each do |event| %>
                <% event[:prop64][:counts].each do |conviction_count| %>
                  <tr>
                    <td><%= event[:event].date&.strftime('%m/%d/%Y') %></td>
                    <td><%= conviction_count.disposition&.severity %></td>
                    <td><%= conviction_count.code_section %></td>
                    <td><%= conviction_count.code_section_description&.titleize %></td>
                    <td>#<%= event[:event].case_number %></td>
                  </tr>
                <% end %>
              <% end %>
            </table>
          </div>
        <% end %>
      <% end %>
      <div class="form-card__footer">
        <%= link_to 'Next â†’', after_show_path, class: 'button button--primary' %>
      </div>
    <% else %>
      <h1 class="mt-5">Good news, we didn't find any convictions on your record!</h1>

      <p>This means you don't need to apply for record clearance because you have no convictions to clear.</p>

      <div class="row">
        <div class="col-sm-2">
          <%= link_to 'Done', root_path, class: 'btn btn-info btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
