<% @title="Transcript" %>
<div class="slab">
  <div class="form-card extra-wide-layout margin-top-large margin-bottom-large">
    <header class="form-card__header text--centered">
      <h1 class="big-emoji small_padding_bottom">ðŸ˜€</h1>
      <p class="text--large">We found <%= pluralize(@number_of_eligible_counts, 'conviction') %> that may be eligible for record clearance.</p>
    </header>
    <h2>Transcript - <%= @user_name %></h2>
    <table class="data-table">
      <thead>
      <tr>
        <th>Date</th>
        <th>County</th>
        <th>Case Number</th>
        <th>Grade</th>
        <th>Charge</th>
        <th>Probation</th>
        <th>Prison</th>
        <th>Remedy</th>
      </tr>
      </thead>
      <tbody>
      <% @transcript.rows.each do |row| %>
        <tr class=<%= 'divider' if row[:first_row_in_case?] %>>
          <td><%= row[:date] %></td>
          <td><%= row[:courthouse] %></td>
          <td><%= row[:case_number] %></td>
          <td><%= row[:severity] %></td>
          <td><%= row[:code_section] %></td>
          <td><%= row[:probation] %></td>
          <td><%= row[:prison] %></td>
          <td><%= row[:remedy] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="form-card__footer">
      <%= link_to 'Next â†’', new_user_legal_representations_path(@rap_sheet.user), class: 'button button--primary' %>
    </div>
  </div>
</div>
