<p>Here is your rap sheet</p>

<div>
  <div class="border">
    <p>Convictions:</p>
    <table>
      <thead>
      <tr>
        <th>Conviction Date</th>
        <th>Case Number</th>
        <th>Courthouse</th>
      </tr>
      </thead>
      <tbody>
      <% @rap_sheet.convictions.each do |date| %>
        <tr>
          <td><%= date[:date] %></td>
          <td><%= date[:case_number] %></td>
          <td><%= date[:courthouse] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <% @rap_sheet.rap_sheet_pages.each.with_index do |r, i| %>
    <p>Page <%= i + 1 %></p>
    <pre>
      <%= r.text %>
    </pre>
  <% end %>
</div>
